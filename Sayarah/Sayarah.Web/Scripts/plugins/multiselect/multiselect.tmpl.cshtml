
<div class="dropdown">
    <a class="btn" ng-click="toggleSelect()" ng-disabled="disabled" ng-class="{'error': !valid()}">
        <span class="pull-left">{{header}}</span>
        <span class="caret pull-right"></span>
    </a>
    <ul class="dropdown-menu">
        <li>
            <input class="input-block-level" type="text" ng-model="searchText.label" autofocus="autofocus" placeholder="@L("Common.Filter")" />
        </li>
        <li ng-show="multiple">
            <button type="button" class="btn-link btn-small" ng-click="checkAll()"><i class="icon-ok"></i> @L("Common.Checkall")</button>
            <button type="button" class="btn-link btn-small" ng-click="uncheckAll()"><i class="icon-remove"></i> @L("Common.Uncheckall")</button>
        </li>
        <li ng-repeat="i in items | filter:searchText">
            @*<a ng-click="select(i); focus()">*@
                <a ng-click="select(i);">
                    <i ng-class="{'icon-ok': i.checked, 'icon-empty': !i.checked}"></i> {{i.label}}
                </a>
        </li>
    </ul>
</div>